{
  "name": "oz-stack-starterkit",
  "version": "1.0.0",
  "description": "A lightweight stack with FastAPI, HTMX, and Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i src/static/css/app.css -o src/static/css/output.css",
    "watch:css": "tailwindcss -i src/static/css/app.css -o src/static/css/output.css --watch",
    "dev": "python -m src.main",
    "start": "npm run build:css && python -m src.main",
    "setup": "pip install -r requirements.txt && npm install"
  },
  "keywords": [
    "fastapi",
    "htmx",
    "tailwindcss",
    "daisyui"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "daisyui": "^3.9.2",
    "tailwindcss": "^3.3.3"
  }
}

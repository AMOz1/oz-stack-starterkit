{
  "name": "oz-stack-starterkit",
  "version": "1.0.0",
  "description": "A lightweight stack with FastAPI, HTMX, and Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i src/static/css/app.css -o src/static/css/output.css",
    "watch:css": "tailwindcss -i src/static/css/app.css -o src/static/css/output.css --watch",
    "dev": "python -m src.main",
    "start": "npm run build:css && python -m src.main",
    "desktop": "python -m src.desktop.run",
    "cli": "python -m src.desktop.cli",
    "setup": "bash setup.sh",
    "clean": "rm -rf venv node_modules src/static/css/output.css",
    "reinstall": "npm run clean && npm run setup",
    "init-db": "cd src/database && alembic revision --autogenerate -m \"initial\" && alembic upgrade head"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "fastapi",
    "htmx",
    "tailwindcss",
    "daisyui",
    "hyperscript",
    "alpinejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "daisyui": "^3.9.2",
    "tailwindcss": "^3.3.3"
  }
}
